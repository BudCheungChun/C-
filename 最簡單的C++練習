#include <iostream>
#include <string.h>
using namespace std;

class Person {
private:
	char m_name[32];
	int m_age;
public:
	void initPerson(const char *name,int age) {
		
		if (name != NULL) {
			strcpy_s(m_name, name);
		}
		else {
			cout << "name should not be NULL" << endl;
		}
		if (age >=0 && age<=100) {
			m_age = age;
		}
		else {
			cout << "age should be between 0~100" << endl;
		}
	}
	void showPerson() {
		cout << "Name : " << m_name << "  Age : " << m_age << endl;
	}
	void setName(char *name) {
		if (name != NULL) {
			strcpy_s(m_name,name);
		}
	}
	void setAge(int age) {
		if (age >=0 && age<=100) {
			m_age = age;
		}
	}
};

int main() {
	Person Eric;
	
	Eric.initPerson((char *)"Eric", 26);

	Eric.showPerson();

	Eric.setName((char *)"Bob");

	return 0;
}
